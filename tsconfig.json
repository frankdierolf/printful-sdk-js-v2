{
  "compilerOptions": {
    "target": "ES2017",
    "module": "ESNext",
    "moduleResolution": "node",
    "outDir": "examples/javascript/dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationMap": false,
    "declarationDir": "examples/javascript/dist/types",
    "importHelpers": true,
    "noUnusedLocals": false, // fix for auto-generated code
    "noUnusedParameters": false,
    "noImplicitAny": false // risky but needed for v1
  },
  "include": [
    "./src" // Or the directory containing your generated code
  ],
  "exclude": ["node_modules", "examples/javascript/dist"]
}
